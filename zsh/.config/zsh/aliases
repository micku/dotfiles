alias cp="cp -i"                                                # Confirm before overwriting something
alias df='df -h'                                                # Human-readable sizes
alias free='free -m'                                            # Show sizes in MB
alias gitu='git add . && git commit && git push'
alias g='git'
alias gwa='git_worktree_add'
alias la='ls -al'
alias v='nvim'

alias dot='tmux_go_to_session ~/dotfiles'
alias work='go_to_project ~/dev/work/*/**'
alias pers='go_to_project ~/dev/personal/**'
alias soft='go_to_project ~/dev/software/**'

if [ -f ~/.config/zsh-work/aliases ]; then
    source ~/.config/zsh-work/aliases
fi
